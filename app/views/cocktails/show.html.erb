<p id="notice"><%= notice %></p>




<div class="cards row justify-content-center">
<h1> <%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
<div class="card-product">
  <img src="http://www.natural-cure.org/wp-content/uploads/wonders-of-lemon.jpg" />
  <div class="card-product-infos">
<%= dose.description %>
<%= dose.ingredient.name %>
  <%= link_to 'delete ingredients', dose_path(dose), :method => :delete %>
 </div>
</div>
<% end %>

</div>




<button type="button" class="btn"><%= link_to "Add ingredients", new_cocktail_dose_path(@cocktail), class: "btn btn-light"%></btn></button>
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>


<button type="button" class="btn"><%= link_to 'Back', cocktails_path, class: "btn btn-light"%></


